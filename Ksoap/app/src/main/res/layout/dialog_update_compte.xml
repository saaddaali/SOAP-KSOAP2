<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextInputLayout for 'Solde' -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:boxBackgroundMode="outline">

        <EditText
            android:id="@+id/et_solde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Solde"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout for 'Date de création' -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:boxBackgroundMode="outline">

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de création" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextView for 'Type de compte' -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type de compte"
        android:layout_marginBottom="4dp" />

    <!-- Spinner for 'Type de compte' -->
    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <Switch
        android:id="@+id/format_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use XML Format" />

</LinearLayout>
